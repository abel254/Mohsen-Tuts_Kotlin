<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFragment">


    <TextView
        android:id="@+id/txtFragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="first fragment"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET TEXT"
        app:layout_constraintEnd_toEndOf="@+id/txtFragment1"
        app:layout_constraintStart_toStartOf="@+id/txtFragment1"
        app:layout_constraintTop_toBottomOf="@+id/txtFragment1" />

    <EditText
        android:id="@+id/edtFragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="msg from frag1 to frag2"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFr1ToFr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Send To Fragment2"
        app:layout_constraintEnd_toEndOf="@+id/edtFragment1"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/edtFragment1"
        app:layout_constraintTop_toBottomOf="@+id/edtFragment1" />

    <EditText
        android:id="@+id/edtFrag1ToActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="msg from frag1 to activity"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFrag1toActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frag1 msg to Activity"
        app:layout_constraintEnd_toEndOf="@+id/edtFrag1ToActivity"
        app:layout_constraintStart_toStartOf="@+id/edtFrag1ToActivity"
        app:layout_constraintTop_toBottomOf="@+id/edtFrag1ToActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>